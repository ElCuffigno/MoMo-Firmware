#!/bin/bash

SSH_CMD="ssh MoMoWorkspace"

echo "Copying..."
$SSH_CMD "mkdir -p /welldone/build/module; rm -rf /welldone/build/module/*"
tar -cz . | $SSH_CMD "sudo tar -xzC /welldone/build/module"
echo "Building..."
$SSH_CMD "cd /welldone/build/module; mibtool build build/output"
echo "Downloading..."
$SSH_CMD "tar -czf /welldone/build/output /welldone/output.tar.gz" 
scp | tar -xzC ./build/output
echo "Done!"